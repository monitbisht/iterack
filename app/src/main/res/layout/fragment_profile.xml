<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:clipToPadding="false"
    android:paddingBottom="120dp"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profileCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/dark_charcoal"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginTop="32dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/profile_name_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Username"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    app:layout_constraintEnd_toStartOf="@id/profile_edit_button"
                    app:layout_constraintStart_toEndOf="@id/profileImage"
                    app:layout_constraintTop_toTopOf="@id/profileImage" />



                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="User Email"
                    android:textColor="@color/profile_text_secondary"
                    android:textSize="14sp"
                    android:paddingTop="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="6dp"
                    app:layout_constraintEnd_toEndOf="@id/profile_name_textView"
                    app:layout_constraintStart_toStartOf="@id/profile_name_textView"
                    app:layout_constraintTop_toBottomOf="@id/profile_name_textView" />

                <ImageView
                    android:id="@+id/profile_edit_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/profile_name_textView"
                    app:tint="@color/mutated_blue"
                    android:clickable="true"
                    android:visibility="invisible"
                    />


                <View
                    android:id="@+id/divider0"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/profile_divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profileImage" />

                <ImageView
                    android:id="@+id/change_password_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_password"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider0"
                    app:tint="@color/profile_text_secondary"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/change_password_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Change Password"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="@id/change_password_icon"
                    app:layout_constraintEnd_toStartOf="@id/change_password_arrow"
                    app:layout_constraintStart_toEndOf="@id/change_password_icon"
                    app:layout_constraintTop_toTopOf="@id/change_password_icon" />

                <ImageView
                    android:id="@+id/change_password_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:layout_constraintBottom_toBottomOf="@id/change_password_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/change_password_icon"
                    app:tint="@color/profile_text_secondary"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/appLockIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/ic_fingerprint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/change_password_icon"
                    app:tint="@color/profile_text_secondary" />

                <TextView
                    android:id="@+id/app_lock_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="App Lock"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/appLockIcon"
                    app:layout_constraintEnd_toStartOf="@id/app_lock_toggle_button"
                    app:layout_constraintStart_toEndOf="@id/appLockIcon"
                    app:layout_constraintTop_toTopOf="@id/appLockIcon" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/app_lock_toggle_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:layout_constraintBottom_toBottomOf="@id/appLockIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/appLockIcon"
                    app:thumbTint="@color/switch_thumb_tint"
                    app:trackTint="@color/switch_track_tint"/>


                <ImageView
                    android:id="@+id/biometrics_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/appLockIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tint="@color/profile_text_secondary" />

                <TextView
                    android:id="@+id/biometrics_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Biometrics"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/biometrics_icon"
                    app:layout_constraintBottom_toBottomOf="@id/biometrics_icon"
                    app:layout_constraintStart_toEndOf="@id/biometrics_icon"
                    app:layout_constraintEnd_toStartOf="@id/biometrics_toggle_button" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/biometrics_toggle_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:thumbTint="@color/switch_thumb_tint"
                    app:trackTint="@color/switch_track_tint"
                    app:layout_constraintTop_toTopOf="@id/biometrics_icon"
                    app:layout_constraintBottom_toBottomOf="@id/biometrics_icon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/device_credential_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/biometrics_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tint="@color/profile_text_secondary" />

                <TextView
                    android:id="@+id/device_credential_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Device Credential"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/device_credential_icon"
                    app:layout_constraintBottom_toBottomOf="@id/device_credential_icon"
                    app:layout_constraintStart_toEndOf="@id/device_credential_icon"
                    app:layout_constraintEnd_toStartOf="@id/device_credential_toggle_button" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/device_credential_toggle_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:thumbTint="@color/switch_thumb_tint"
                    app:trackTint="@color/switch_track_tint"
                    app:layout_constraintTop_toTopOf="@id/device_credential_icon"
                    app:layout_constraintBottom_toBottomOf="@id/device_credential_icon"
                    app:layout_constraintEnd_toEndOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/notificationsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="NOTIFICATIONS"
            android:textColor="@color/medium_gray"
            android:textSize="12sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/notificationsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/dark_charcoal"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/taskRemindersText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Reminders"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/task_reminder_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:layout_constraintBottom_toBottomOf="@id/taskRemindersText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/taskRemindersText"
                    app:thumbTint="@color/switch_thumb_tint"
                    app:trackTint="@color/switch_track_tint"
                    />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/profile_divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/taskRemindersText" />

                <TextView
                    android:id="@+id/soundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Sound and Vibration"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider1" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/sound_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:layout_constraintBottom_toBottomOf="@id/soundText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/soundText"
                    app:thumbTint="@color/switch_thumb_tint"
                    app:trackTint="@color/switch_track_tint"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/appSettingsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="APP SETTINGS"
            android:textColor="@color/medium_gray"
            android:textSize="12sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/appSettingsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/dark_charcoal"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/export_data_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Export Tasks"
                    android:textColor="@color/off_white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/export_data_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/export_data_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_export"
                    app:layout_constraintBottom_toBottomOf="@id/export_data_textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/export_data_textView"
                    app:tint="@color/profile_text_secondary"
                    android:clickable="true"/>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/profile_divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/export_data_textView" />

                <TextView
                    android:id="@+id/reset_data_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Reset All Data"
                    android:textColor="@color/warning_red"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/reset_data_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider2" />

                <ImageView
                    android:id="@+id/reset_data_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    app:layout_constraintBottom_toBottomOf="@id/reset_data_textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/reset_data_textView"
                    app:tint="@color/warning_red" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/profile_divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/reset_data_textView" />

                <TextView
                    android:id="@+id/languageText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Language"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/languageValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider3" />

                <TextView
                    android:id="@+id/languageValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coming soon"
                    android:textColor="@color/profile_text_secondary"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/languageText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/languageText" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/aboutHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="ABOUT"
            android:textColor="@color/medium_gray"
            android:textSize="12sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/aboutCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/dark_charcoal"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/versionText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="App Version"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/versionValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/versionValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.0.0"
                    android:textColor="@color/profile_text_secondary"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/versionText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/versionText" />

                <View
                    android:id="@+id/divider4"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/profile_divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/versionText" />

                <TextView
                    android:id="@+id/supportText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Support Email"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/supportValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider4" />

                <TextView
                    android:id="@+id/supportValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="monitbisht15@gmail.com"
                    android:textColor="@color/profile_text_secondary"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/supportText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/supportText" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/profile_button_logout_bg"
            android:padding="14dp"
            android:text="Logout"
            android:textColor="@color/warning_red"
            app:cornerRadius="12dp" />

        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Made with ❤️ by Monit"
            android:textColor="@color/profile_text_footer"
            android:textSize="12sp"
            />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>