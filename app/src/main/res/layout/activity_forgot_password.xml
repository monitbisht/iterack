<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/dark_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- Decorative Background Shape -->
        <View
            android:id="@+id/decorative_circle_forgot"
            android:layout_width="310dp"
            android:layout_height="310dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/dark_surface"
            android:rotation="35"
            android:translationX="90dp"
            android:translationY="-80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Header -->
        <TextView
            android:id="@+id/tvForgotHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Forgot\nPassword"
            android:fontFamily="sans-serif-black"
            android:lineSpacingExtra="-8dp"
            android:textColor="@color/off_white"
            android:textSize="40sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Subheader -->
        <TextView
            android:id="@+id/tvForgotSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email to reset password"
            android:layout_marginTop="8dp"
            android:textColor="@color/medium_gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvForgotHeader" />

        <!-- Input Container -->
        <LinearLayout
            android:id="@+id/inputContainerForgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvForgotSub">

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forgot_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etForgotEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_background"
                    android:drawableStart="@drawable/ic_mail"
                    android:drawableTint="@color/light_blue"
                    android:drawablePadding="16dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="20dp"
                    android:textColor="@color/off_white"
                    android:textColorHint="@color/medium_gray"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Reset Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/animated_button"
            android:stateListAnimator="@null"
            android:text="SEND RESET LINK"
            android:textColor="@color/off_white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/inputContainerForgot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/resetProgress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnResetPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>


        <!-- Footer -->
        <LinearLayout
            android:id="@+id/forgotFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/resetProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:text="Remembered your password? "
                android:textColor="@color/medium_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvBackToLogin"
                android:text="Log In"
                android:textColor="@color/fresh_green"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
