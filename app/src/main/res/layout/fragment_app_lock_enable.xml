<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/dark_background">

    <!-- Decorative circle like signup -->
    <View
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:rotation="32"
        android:translationX="140dp"
        android:translationY="-90dp"
        android:alpha="0.40"
        android:background="@drawable/rounded_background_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lock Icon -->
    <ImageView
        android:id="@+id/appLockIcon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_shield"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/cyan_accent"
        android:background="@drawable/circle_icon_bg"
        android:padding="8dp"
        android:layout_marginTop="24dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/enableAppLockTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable App Lock"
        android:textSize="28sp"
        android:textColor="@color/bright_white"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/appLockIcon"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/enableAppLockSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Use your phone's password and biometrics to secure your app."
        android:textColor="@color/soft_grey"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/enableAppLockTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Device Lock Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/deviceLockCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:cardBackgroundColor="@color/dark_surface"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/enableAppLockSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_mobile"
                app:tint="@color/cyan_accent"
                android:layout_gravity="bottom"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use device screen lock"
                android:textColor="@color/bright_white"
                android:textSize="22sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                />

        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App lock will rely on your phone’s existing password, PIN or pattern and any enabled biometrics."
                android:textColor="@color/soft_grey"
                android:textSize="16sp"
                android:layout_marginTop="34dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Use Face ID or fingerprint to unlock quickly\n\n• Fall back to your device passcode when needed"
                android:textColor="@color/medium_gray"
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Disclaimer -->
    <TextView
        android:id="@+id/appLockDisclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your actual password is never stored in the app."
        android:textColor="@color/soft_grey"
        android:textSize="13sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/deviceLockCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Turn On Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/turn_on_app_lock_button"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:text="TURN ON APP LOCK"
        android:textColor="@color/bright_white"
        android:background="@drawable/animated_button"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/appLockDisclaimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Maybe Later -->
    <TextView
        android:id="@+id/maybe_later_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maybe later"
        android:textColor="@color/medium_gray"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/turn_on_app_lock_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Decorative Bottom Box -->
    <View
        android:id="@+id/decorative_bottom_box"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:background="@drawable/rounded_background_dark"
        android:rotation="25"
        android:alpha="0.38"
        android:translationX="-90dp"
        android:translationY="140dp"
        app:layout_constraintTop_toBottomOf="@id/maybe_later_textView"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
