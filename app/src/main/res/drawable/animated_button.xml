<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  PRESSED STATE (Simulates Hover/Active)  -->
    <!--  It gets slightly transparent and changes shape slightly when touched  -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#99BB86FC" android:endColor="#9903DAC6" android:angle="45"/>
            <corners android:radius="12dp"/>
            <!--  Sharper corners on press  -->
            <stroke android:width="1dp" android:color="#FFFFFF"/>
        </shape>
    </item>
    <!--  DEFAULT STATE  -->
    <item>
        <shape android:shape="rectangle">
            <!--  Modern Gradient: Purple to Teal  -->
            <gradient android:startColor="#BB86FC" android:endColor="#03DAC6" android:angle="45"/>
            <!--  Fully rounded pill shape  -->
            <corners android:radius="30dp"/>
        </shape>
    </item>
</selector>