<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Gradient background -->
    <gradient
        android:type="linear"
        android:angle="90"
        android:startColor="#BB86FC"
        android:endColor="#9A63E6" />

    <!-- Optional: Slight tint stroke -->
    <stroke
        android:width="1dp"
        android:color="#A174E8" />
</shape>
